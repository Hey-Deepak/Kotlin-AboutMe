<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="@string/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_text"
            android:textAlignment="center"
            style="@style/NameStyle1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nick_name_edit_text"
            style="@style/NameStyle"
            android:hint="@string/what_is_yours_nickname"
            android:textAlignment="center"
            android:layout_margin="8dp"/>
    <Button
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/done_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_green_dark"
            android:textAlignment="gravity"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nickname_text" android:textAlignment="center"
            tools:visibility="gone"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/star_image"
            android:contentDescription="@string/yellow_star"
            android:layout_marginTop="@dimen/layout_margin" style="@style/NameStyle1"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_text">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bio_text"
                style="@style/NameStyle"
                android:text="@string/bio"
                android:paddingStart="@dimen/padding"
                android:paddingEnd="@dimen/padding"
                android:lineSpacingMultiplier="1.2"/>
    </ScrollView>

</LinearLayout>